@model IEnumerable<IrsaWebStore.Models.ViewModel.Shop.ProductVM>

@{
    ViewBag.Title = ViewBag.CategoryName;
    string CategoryNameViewBag = ViewBag.CategoryName;
}

<h2>@ViewBag.CategoryName2</h2>

<table class="table">
    <tr>
        <th>
            @IrsaWebStore.Resources.GlobalRes.Name
        </th>
        <th>
            @IrsaWebStore.Resources.GlobalRes.Description
        </th>
        <th>
            @IrsaWebStore.Resources.GlobalRes.Price
        </th>
        <th>
            @IrsaWebStore.Resources.GlobalRes.Image
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @IrsaWebStore.Resources.GlobalRes.Currency_icon@Html.DisplayFor(modelItem => item.PriceWithRate)
        </td>
        <td>
            <a href="/shop/product-details/@item.Slug">
                <img src="/Images/Uploads/Products/@item.Id/Thumbs/@item.ImageName" />
            </a>
        </td>
        <td>
            <a href="/shop/product-details/@item.Slug">@IrsaWebStore.Resources.GlobalRes.Details</a>
        </td>
    </tr>
}

</table>
