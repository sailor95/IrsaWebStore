@model IrsaWebStore.Models.ViewModel.Cart.CartVM



<div class="ajaxcart" style="color:white;">
    @if (Request.IsAuthenticated)
    {
        <a href="/cart">
            <span class="glyphicon glyphicon-shopping-cart"></span>
        </a>
    }
    else
    {
        <a href="/cart/CartWithoutLogin">
            <span class="glyphicon glyphicon-shopping-cart"></span>
        </a>
    }
    Your cart: @Model.Quantity item(s) - $@Model.Price
    <br />
    <span class="glyphicon glyphicon-check"></span>@Html.ActionLink("Checkout", "Index")
</div>